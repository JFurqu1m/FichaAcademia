@model FichaAcademia.ViewModels.AdministradorViewModel

@{
    ViewData["Title"] = "Faça seu Login";
}

<div class="container">
    <div class="row">
        <div class="col s12">
            <div class="collection with-header" style="background-color: #424242; border-radius: 8px ">
                <h6 class="collection-header" style="background-color: #424242; text-align: center ">


                    <img height="55" width="150" src="~/Imagens/MyHeroAcademy_LogoMarca_Roxo.png" />

                </h6>
                <div class="col s6">
                   
                        <img width="265" height="240" src="~/Imagens/Hero_Login.png" />
                    
                </div>

                <div class="col s6">
                    <form asp-action="Login">
                        <div class="collection-item" style="background-color: #424242;">
                            <div asp-validation-summary="ModelOnly" class="red-text darken-3"></div>
                            <div class="row">
                                <div class="input-field">
                                    <input asp-for="Email" style="color:white" type="email" class="validate" id="Email" />
                                    <label for="Email">Email</label>
                                    <span asp-validation-for="Email" class="red-text darken-3"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field">
                                    <input asp-for="Senha" style="color:white" class="validate" id="Senha" />
                                    <label for="Senha">Senha</label>
                                    <span asp-validation-for="Senha" class="red-text darken-3"></span> 
                                </div>
                            </div>
                            <div class="collection-item" style="background-color: #424242; text-align: right">
                                <button type="submit" class="btn-small purple darken-2"><i class="material-icons right">arrow_forward</i>Login</button>

                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
