@model FichaAcademia.Dominio.Models.Exercicio

@{
    ViewData["Title"] = "Novo Exercício";
}

<style>
    h6 {
        color: whitesmoke;
    }

    input {
        color: whitesmoke;
    }

    label {
        color: whitesmoke;
    }


    select {
        background-color: dimgrey;
        color: whitesmoke
    }

    select option{
        background-color:dimgrey;
        color:whitesmoke
    }


</style>

<div class="container">
    <div class="row">
        <div class="col s12">
            <div class="collection with-header grey darken-3">
                <h6 class="collection-header grey darken-3">Novo Exercício</h6>
                <form asp-action="Create">
                    <div class="collection-item grey darken-3">
                        <div asp-validation-summary="ModelOnly" class="red-text darken-3"></div>
                        <div class="row">
                            <div class="input-field">
                                <input asp-for="Nome" class="validate" id="Nome" />
                                <label for="Nome">Nome</label>
                                <span asp-validation-for="Nome" class="red-text darken-3"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field">
                                <select asp-for="CategoriaExercicioId" class="browser-default" asp-items="ViewBag.CategoriaExercicioId"></select>
                                <span asp-validation-for="CategoriaExercicioId" class="red-text darken-3"></span>
                            </div>
                        </div>

                        <div class="collection-item grey darken-3" style="text-align:right">
                            <input type="submit" value="Salvar" class="btn-small purple darken-1" /> &nbsp;
                            <a asp-action="Index" class="btn-small grey darken-1">Voltar</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
