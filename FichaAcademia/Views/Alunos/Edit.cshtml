@model FichaAcademia.Dominio.Models.Aluno

@{
    ViewData["Title"] = "Atualizar " + Model.NomeCompleto;
}

<div class="container">
    <div class="row">
        <div class="col s12">
            <div class="collection grey darken-3 with-header">
                <h6 class="collection-header grey darken-3" style="color:white">Atualizar @Model.NomeCompleto</h6>
                <form asp-action="Edit">
                    <div class="collection-item grey darken-3">
                        <div asp-validation-summary="ModelOnly" class="red-text darken-3"></div>
                        <input type="hidden" asp-for="AlunoId" />
                        <div class="row">
                            <div class="input-field">
                                <input asp-for="NomeCompleto"style="color:white" class="validate" id="NomeCompleto" />
                                <label for="NomeCompleto" style="color:white">Nome Completo</label>
                                <span asp-validation-for="NomeCompleto" class="red-text darken-3"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field">
                                <input asp-for="Idade" class="validate" id="Idade" style="color:white" />
                                <label for="Idade" style="color:white">Idade</label>
                                <span asp-validation-for="Idade" class="red-text darken-3"></span>
                            </div>
                        </div>


                        <div class="row">
                            <div class="input-field">
                                <input asp-for="Peso" class="validate" id="Peso" style="color:white"/>
                                <label for="Peso"style="color:white">Peso</label>
                                <span asp-validation-for="Peso" class="red-text darken-3"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field grey darken-3 " style="color:white">
                                <select asp-for="ObjetivoId"  class="input-field blue validate" id="ObjetivoId" asp-items="ViewBag.ObjetivoId"></select>
                                <lable for="Objetivo" style="color:white">Objetivo</lable>
                                <span asp-validation-for="ObjetivoId" class="red-text darken-3"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field">
                                <select asp-for="ProfessorId" class="input-field validate" id="ProfessorId" asp-items="ViewBag.ProfessorId"></select>
                                <lable for="Professor" style="color:white">Professor</lable>
                                <span asp-validation-for="ProfessorId" class="red-text darken-3"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field">
                                <input asp-for="FrequenciaSemanal"class="input-field validate" id="FrequenciaSemanal" />
                                <label for="FrequenciaSemanal" style="color:white">Frequencia Semanal</label>
                                <span asp-validation-for="FrequenciaSemanal" class="red-text darken-3"></span>
                            </div>
                        </div>

                        <div class="collection-item grey darken-3" style="text-align:right">
                            <input type="submit" value="Atualizar" class="btn-small purple darken-1" /> &nbsp;
                            <a asp-action="Index" class="btn-small grey darken-1">Voltar</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
    $(document).ready(function () {
        $('select').formSelect();
    })

       
    </script>

<style>
    

    input {
        color: white
    }

    
    .dropdown-content li > a, .dropdown-content li > span {

        background-color:dimgrey;
        color: white;
    }


</style>



}
